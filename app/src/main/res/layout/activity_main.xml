<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <TextView
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Base.Widget.MaterialComponents.TextView"
        android:id="@+id/message"
        app:layout_constraintTop_toTopOf="@id/top_message"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        />
    <Button
        android:text="@string/action_sign_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/start_button"
        app:layout_constraintEnd_toEndOf="@id/end_button"
        android:id="@+id/logout"
        app:layout_constraintTop_toBottomOf="@+id/message"
        android:layout_marginTop="48dp"
    />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_message"
        android:layout_marginTop="64dp"
        app:layout_constraintGuide_percent="0.33"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_button"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_button"
        android:layout_marginTop="64dp"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>